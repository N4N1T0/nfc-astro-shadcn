---
// Atro Imports - Globals
import { ViewTransitions } from 'astro:transitions'
import { type CollectionEntry } from 'astro:content'

// Lib Imports
import jsonLDGenerator from '../../lib/jsonLd'

// Style Imports
import '@/styles/globals.css'

// Props Types
interface Props {
  title?: string | undefined
  description?: string | undefined
  ogImage?: URL | undefined
  url?: URL | undefined
  post?: CollectionEntry<'blog'>
}

// Canonical URL for SEO
const canonicalURL = new URL(Astro.url.pathname, Astro.site)

// Open Graph Image
if (Astro.props.ogImage === undefined) {
  Astro.props.ogImage = new URL('og-image.png', canonicalURL)
}

// Astro Props
const { title, description, ogImage, post, url = Astro.url } = Astro.props

// JsonLd Genearting acording to the page type
const jsonLD = jsonLDGenerator({
  type: post ? 'post' : 'website',
  post: post,
  url,
})
---

<!-- Google tag (gtag.js) -->
<script async src="https://www.googletagmanager.com/gtag/js?id=G-FM93CYH0GQ"
></script>
<script>
  window.dataLayer = window.dataLayer || []
  function gtag() {
    dataLayer.push(arguments)
  }
  gtag('js', new Date())

  gtag('config', 'G-FM93CYH0GQ')
</script>

<!-- Basic HTML Meta Tags -->
<meta charset="utf-8" />
<meta name="robots" content="index, follow" />
<meta name="googlebot" content="index, follow" />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<meta name="generator" content={Astro.generator} />
<meta
  name="keywords"
  content="boxeo en Marbella, boxeo en San Pedro de Alcántara, kickboxing en Marbella, kickboxing en San Pedro de Alcántara, entrenador de boxeo, entrenador de kickboxing, entrenador a domicilio, entrenamiento personalizado, grupos reducidos, escuela cubana de boxeo, entrenemiento en area libre"
/>
<meta name="subject" content="Combat sports training business" />
<meta name="language" content="ES" />
<meta name="Classification" content="Business" />
<meta
  name="author"
  content="Adrian 'Nano' Alvarez, adrian.alvarezalonso1991@gmail.com"
/>
<meta name="designer" content="Adrian 'Nano' Alvarez" />
<meta name="owner" content="Adrian 'Nano' Alvarez" />
<link rel="canonical" href={canonicalURL} />
<meta name="title" content={title} />
<meta name="description" content={description} />
<link rel="sitemap" href={`${Astro.site}sitemap-0.xml`} />
<link
  rel="alternate"
  type="application/rss+xml"
  title="RSS Feed para mi Website"
  href="rss.xml"
/>
<title>{title}</title>

<!-- Favicon -->
<link
  rel="apple-touch-icon-precomposed"
  href={`${Astro.site}apple-touch-icon.png`}
/><!-- iPhone, iPod e Android 2.2+ -->
<link
  rel="shortcut icon"
  type="image/x-icon"
  href={`${Astro.site}favicon.ico`}
/>

<!-- Open Graph -->
<meta property="og:type" content={post ? 'blog.articule' : 'website'} />
<meta property="og:url" content={url ? url : canonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={url ? url : canonicalURL} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={ogImage} />

<!-- jsonLD -->
<Fragment set:html={jsonLD} />

<!-- Google Tag Manager -->
<script>
  ;(function (w, d, s, l, i) {
    w[l] = w[l] || []
    w[l].push({ 'gtm.start': new Date().getTime(), event: 'gtm.js' })
    var f = d.getElementsByTagName(s)[0],
      j = d.createElement(s),
      dl = l != 'dataLayer' ? '&l=' + l : ''
    j.async = true
    j.src = 'https://www.googletagmanager.com/gtm.js?id=' + i + dl
    f.parentNode.insertBefore(j, f)
  })(window, document, 'script', 'dataLayer', 'GTM-WVVRPDML')
</script>
<!-- End Google Tag Manager -->

<!-- Astro Page Trasnitions -->
<ViewTransitions />
