---
// Astro Imports - Globals
import { Image } from 'astro:assets'

// Props type
type Props = {
  name: string
  image: ImageMetadata
  review: {
    es: string
    en: string
  }
}

// Translation Imports
import { getLangFromUrl } from '@/i18n/utils'
const lang = getLangFromUrl(Astro.url)

// Astro Props
const { name, image, review } = Astro.props
---

<div
  class='col-span-1 rounded-lg border bg-card text-card-foreground shadow-sm'>
  <div class='flex items-center justify-between p-6'>
    <h3 class='text-2xl font-semibold leading-none tracking-tight'>
      {name}
    </h3>
    <Image src={image} alt={`Foto de perfil de ${name}`} />
  </div>
  <p class='p-6 pt-0'>{review[lang]}</p>
</div>
