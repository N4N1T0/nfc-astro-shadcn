---
// Astro imports - Components
import BaseLayout from '../../layouts/BaseLayout.astro'

// Style Imports
import { buttonVariants } from '../../components/ui/button'

// create static page instead of SSR
export const prerender = true
---

<BaseLayout
  title="404 - Not Found"
