---
// import Astro - Components & Globals
import BaseLayout from '../../layouts/BaseLayout.astro'
import BlogCard from '../../components/blog/BlogCard.astro'
import BlogHeader from '../../components/blog/BlogHeader.astro'
import { type CollectionEntry } from 'astro:content'

// Import Utils
import { getPosts } from '../../lib/fetchers'

const posts: CollectionEntry<'blog'> = await getPosts()
---

<BaseLayout
  title="NFC Blog"
  description="Articulos actualizados sobre bienestar, deportes de combate y mucho mas"
>
  <section class="mx-auto max-w-[1680px]">
    <BlogHeader title="NFC Blog" subtitle="Deleitate con los articulos de" />
    <div
      class="lg:gap mb-5 grid grid-cols-1 gap-x-6 gap-y-9 px-10 md:grid-cols-2 md:gap-y-11 md:px-0 lg:grid-cols-3 lg:gap-x-8"
    >
      {posts.map((post) => <BlogCard post={post} />)}
    </div>
  </section>
</BaseLayout>
